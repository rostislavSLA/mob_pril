


<Resalt>:
	FloatLayout:
		canvas:
			Color: 
				rgb: utils.get_color_from_hex("F3EFEF")
			Rectangle:
				size: self.size
				pos: self.pos
		GridLayout:
			canvas:
				Color: 
					rgb: utils.get_color_from_hex("A3CACA")
				Rectangle:
					size: self.size
					pos: self.pos
			rows: 1
			spacing: 10
			pos_hint: {"top": .50 , "center_x": 0.5}
			size_hint: 0.5, 0.05


			Button:
				id: u_c
				text: "ЧСС"
				background_normal: ""
				background_color: (0,1,0,1)


				
				
				on_release:
					background_color: (0,1,1,1)
					app.animation_button(self)
					app.animation_button_back(ad)
					app.animation_button_back(imt)
					app.result_screen(1)
			Button:

				id: ad
				text: "АД"
				background_normal: ""
				background_color: (0,1,0,1)

				
				
				on_release:
					background_color: (0,1,1,1)
					app.animation_button(self)
					app.animation_button_back(u_c)
					app.animation_button_back(imt)
					app.result_screen(2)

			Button:

				id: imt
				text: "ИМТ"
				background_normal: ""
				background_color: (0,1,0,1)

				
				
				on_release:
					background_color: (0,1,1,1)
					app.animation_button(self)
					app.animation_button_back(ad)
					app.animation_button_back(u_c)
					app.result_screen(3)




	FloatLayout:
		Label:
			id: first_text
			size_hint: .7, 0.06
			text: "ГРАФИК"
			pos_hint: {"top": 1 , "center_x": .5}
			color: 110/255,83/255,83/255,1
	ScreenManager:
		id: screen_manager
		BarGraph:
			name: "bargraph"
			id: bargraph
			size_hint: .8, 0.4
			pos_hint: {"top": .95 , "center_x": .5}